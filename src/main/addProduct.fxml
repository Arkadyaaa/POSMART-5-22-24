<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="390.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.AddProductController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <children>
      <ImageView fx:id="uploadedImage" fitHeight="150.0" fitWidth="150.0" layoutX="120.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
   
       <Label layoutX="14.0" layoutY="186.0" text="Product Name:" />
       <TextField fx:id="productNameField" layoutX="110.0" layoutY="182.0" prefHeight="25.0" prefWidth="149.0" />
   
       <Label layoutX="15.0" layoutY="254.0" text="Price" />
       <TextField fx:id="priceField" layoutX="110.0" layoutY="250.0" prefHeight="25.0" prefWidth="149.0" />
   
       <Label layoutX="16.0" layoutY="289.0" text="Category" />
       <ComboBox fx:id="categoryDropdown" layoutX="110.0" layoutY="285.0" prefHeight="25.0" prefWidth="149.0" />
   
       <Label layoutX="15.0" layoutY="354.0" text="Thumbnail:" />
      <Button fx:id="uploadButton" layoutX="110.0" layoutY="350.0" onMouseClicked="#handleUploadButton" prefHeight="25.0" prefWidth="94.0" text="Upload File" />
   
       <Button fx:id="addProductButton" layoutX="24.0" layoutY="396.0" onAction="#printDetails" prefHeight="25.0" prefWidth="94.0" text="Add Product" />
      <Button fx:id="cancel" layoutX="259.0" layoutY="396.0" onAction="#closeWindowButton" prefHeight="25.0" prefWidth="94.0" text="Cancel" />
      <ImageView fx:id="loadingGif" fitHeight="100.0" fitWidth="100.0" layoutX="135.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="13.0" layoutY="321.0" text="Stock" />
      <TextField fx:id="stockField" layoutX="111.0" layoutY="317.0" prefHeight="25.0" prefWidth="149.0" />
      <Label layoutX="15.0" layoutY="220.0" text="UnitPrice" />
      <ComboBox  fx:id="UnitPrice" layoutX="110.0" layoutY="216.0" prefWidth="150.0" />
   </children>
</AnchorPane>
