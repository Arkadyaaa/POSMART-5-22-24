<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="319.0" prefWidth="334.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="receipt.FXMLDocumentController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label layoutX="10" layoutY="10" text="Name:" />
    <TextField fx:id="nameField" layoutX="106.0" layoutY="10.0" prefHeight="25.0" prefWidth="149.0" />

    <Label layoutX="10" layoutY="40" text="Date:" />
    <DatePicker fx:id="dateField" layoutX="106.0" layoutY="40" prefHeight="25.0" prefWidth="168.0" />

    <Label layoutX="10" layoutY="70" text="Time:" />
    <ComboBox fx:id="timeComboBox" layoutX="107.0" layoutY="70.0" prefHeight="25.0" prefWidth="79.0" />

    <Label layoutX="10" layoutY="100" text="Address:" />
    <TextField fx:id="addressField" layoutX="107.0" layoutY="100.0" prefHeight="25.0" prefWidth="149.0" />

    <Label layoutX="10" layoutY="130" text="Order ID:" />
    <TextField fx:id="orderIdField" layoutX="107.0" layoutY="130.0" />

    <Label layoutX="10" layoutY="160" text="Payment Method:" />
    <ComboBox fx:id="paymentMethodComboBox" layoutX="107.0" layoutY="156.0" />

    <Label layoutX="10" layoutY="190" text="Delivery Method:" />
    <ComboBox fx:id="deliveryMethodComboBox" layoutX="107.0" layoutY="186.0" />

    <Button layoutX="24.0" layoutY="247.0" onAction="#printDetails" prefHeight="25.0" prefWidth="94.0" text="Check Out" />
   <Button layoutX="227.0" layoutY="247.0" onAction="#closeWindow" prefHeight="25.0" prefWidth="94.0" text="Cancel" />
</AnchorPane>
